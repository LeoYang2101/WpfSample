<Window x:Class="WpfSample.WpfWebSocketSharpServerice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample.WpfWebSocketSharpServerice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="StartServerButton" Content="Start Server" Click="StartServerButton_Click" Width="100" Margin="10"/>
        <Button x:Name="StopServerButton" Content="Stop Server" Click="StopServerButton_Click" Width="100" Margin="10"/>
        <Button x:Name="BroadcastMessage" Content="BroadcastMessage" Click="BoardMessageButton_Click" Width="100" Margin="10"/>
    </StackPanel>
</Window>
